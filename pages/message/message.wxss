page {
  background-color: #f1eff2;
}

.box {
  width: 90%;
  box-shadow: rgba(0, 0, 0, 0.12) 0px 2px 6px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;
  padding: 10px 5px 5px 5px;
  background-color: #fff;
  border-radius: 8px;
  /* border-top:2px solid #26b8f3; */
}

.box-title {
  font-size: 17px;
  color: #222023;
}

.box-time {
  margin-top: 15px;
  font-size: 12px;
  color: #949295;
  margin-bottom: 15px;
  line-height: 1.5;
}

.box-link {
  border-top: 1px solid #949295;
  padding-top: 5px;
  padding-bottom: 5px;
  color: #26b8f3;
  display: flex;
  justify-content: space-between;
  font-size: 17px;
}
